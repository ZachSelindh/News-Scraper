{{> header}}

<div class="container">
    {{#if Articles}}
    <div id="body-sec" class="col-12">
        <div id="clear-row" class="row">
            <div class="col-12">
                <a id="clear-button" href="/clear">
                    <button type="button" class="btn btn-warning btn-lg">Clear Articles</button>
                </a>
            </div>
        </div>
        {{#each Articles}}
        {{#unless favorited}}
        <div id="news-id-{{this._id}}" class="row news-item">
            <div class="col-11">
                <h1>{{this.title}}</h1>
                <p>{{this.subhead}}</p>
                <a target="_blank" href={{this.link}}>Read More</a>
            </div>
            <div class="col-1">
                <div class="row">
                    <a href="/fav/{{this.id}}">
                        <img class="news-icon" id="fav-heart-{{this._id}}" title="Click to favorite article"
                            src="https://cdn0.iconfinder.com/data/icons/christmas-set5/100/218-512.png" height="75px"
                            width="75px">
                    </a>
                </div>
            </div>
        </div>
        {{/unless}}
        {{/each}}
    </div>
    {{else}}
    <div id="no-scrape-sec" class="col-sm-12 col-md-10">
        <p id="no-scrape-p">Use the buttons above to scrape for articles.</p>
    </div>
    {{/if}}
</div>